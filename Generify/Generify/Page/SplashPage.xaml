		<StackLayout>
			<Image Source="splash_logo.png" 
			   HeightRequest="250" 
			   WidthRequest="250" 
			   HorizontalOptions="Center"
			   VerticalOptions="Center"/>
		</StackLayout>
	</ContentPage.Content>
</base:BasePage>